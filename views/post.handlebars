<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

   
{{!-- Render comment form for logged in users only --}}
{{#if logged_in}}
<form class="form new-comment-form">
   <div class="form-group">
        <label for="comment-text">Add Comment</label>
        <input class="form-input" type="text" id="comment-text" name="comment-text" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post Comment</button>
      </div>
    </form>
  </div>
 {{/if}}

                                                                                                                                        

<h2 class="text-center">Comments</h2>
{{!-- Looping through all the comments in our database and posting them to the page --}}
{{#each comments as |comment|}}
<div class="commentCont">
	<p class="text-center commentText">{{post.comment.comment_text}}</p>

</div>
{{/each}}

<script src="/js/comment.js"></script>