{{!-- Loop through all posts --}}
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      {{!-- Render post name as a clickable link that directs the user to that posts page --}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    {{!--Displays which user created the post and when  --}}
    <p>Created by {{post.user.name}} on {{format_date date_created}} </p>
  </div>
  <div class="col-md-7">
    {{!-- This is the posts content --}}
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
