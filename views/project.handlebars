<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p></p>
   
  
{{#if logged_in}}

		<form class="new-comment-form formCont d-flex flex-wrap justify-content-center" data-projectid={{id}}>
			<div class="textAreaCont p-2">
				<textarea id='comment_text' name="comment-body"
				placeholder="Enter comment"
				cols="30"
				rows="2"></textarea>
			</div>
			<div class="btnComment p-2">
				<button class="button btn btn-success" type="submit">Add Comment</button>
			</div>
		</form>

		{{/if}}

		<h2 class="text-center">Comments</h2>
		{{#each comments as |comment|}}
		<div class="commentCont">
			<p class="text-center commentText">{{comment.comment_text}}</p>
			<p class="text-center commentOwner"><span>~</span>Created by {{comment.user.name}} on {{format_date date_created}}<span>~</span></p>
		</div>
		{{/each}}

		<script src="/js/comments.js"></script>